.ingredient.fields
  %span.amount
    = f.label :amount
    = f.text_field :amount
  = f.fields_for :food do |ff|
    %span.name
      = ff.label :name
      = ff.text_field :name
    %span.purchase_amount
      = ff.label :purchase_amount
      %span.value
        = na(ff.object.purchase_amount)
    %span.purchase_cost
      = ff.label :purchase_cost
      %span.value
        = dollars(ff.object.purchase_cost)
  = link_to_remove_fields "remove", f