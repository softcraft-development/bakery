= form_for @recipe, :html => { :class => "recipe_form"} do |f|
  = f.error_messages
  %p
    = f.label :name
    = f.text_field :name
  .ingredients
    %h2 Ingredients
    = f.fields_for :ingredients do |i|
      .ingredient
        %span.amount
          = i.label :amount
          = i.text_field :amount
        %span.name
          = i.label :name
          = i.text_field :name
        %span.remove
          = i.check_box :_destroy
          = i.label :_destroy, "Remove"
  %p
    = f.submit
