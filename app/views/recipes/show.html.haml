- title "Recipe"

%p
  %strong Name:
  = @recipe.name
.yield
  %h2
    Yield
  Makes <span class="yield">#{@recipe.yield_string}</span> servings
  - if !@recipe.yield_size.nil?
    of #{@recipe.yield_size.try_unit} each.
.ingredients
  %h2
    Ingredients:
  %ul
    -for ingredient in @recipe.ingredients
      %li
        %span.amount
          = ingredient.amount.try_unit
        %span.name
          = ingredient.name
%p
  = link_to "Edit", edit_recipe_path(@recipe)
  |
  = link_to "Destroy", @recipe, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", recipes_path
